.address{
  display: flex;
  flex-direction: column;
  width :100%;
  height:100%;
}
.header{
  height: 50px;
  background: whitesmoke;
}
button{
  height: 50px;
  background: orange;
  width: 90%
}
.main{
  flex:1;
  overflow-y: auto;
}
.box{
  width: 100%;
  height:120px;
}
.top{
  width: 100%;
  height:80px;
  margin-bottom:1px solid #ccc;
  line-height: 35px;
}
.top text{
  color:gray;
  font-size: 14px;
}
.bottom{
  width: 100%;
  height:40px;
}
.bottom button{
  width: 50%;
  height: 35px;
  line-height: 35px;
  display:inline-block;
  border:none;
  background:white;

}